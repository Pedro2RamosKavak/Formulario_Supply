{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["SKIP_TYPE_CHECK", "NODE_ENV", "NEXT_PUBLIC_*", "AWS_*", "BUCKET"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": [],
      "env": ["NODE_ENV", "NEXT_PUBLIC_*", "AWS_*", "BUCKET"],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": []
    }
  }
} 