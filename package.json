{
  "name": "multimedia-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "npm@10.2.4",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "vercel-build": "chmod +x ./vercel-deploy-fix.sh && ./vercel-deploy-fix.sh",
    "lint": "turbo lint",
    "test": "turbo test",
    "backend:dev": "cd apps/backend && npm run dev",
    "review-app:dev": "cd apps/review-app && npm run dev",
    "form-app:dev": "cd apps/form-app && npm run dev",
    "start-all": "npm run backend:dev & npm run review-app:dev & npm run form-app:dev"
  },
  "devDependencies": {
    "eslint": "^8",
    "ffmpeg-static": "^5.2.0",
    "prettier": "^3",
    "turbo": "latest"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.815.0",
    "@aws-sdk/credential-providers": "^3.812.0",
    "formik": "^2.4.6",
    "framer-motion": "^12.12.1",
    "lucide-react": "^0.511.0",
    "next-themes": "^0.4.6",
    "yup": "^1.6.1"
  }
}
