{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@ui/*": [
        "../../packages/ui/*"
      ],
      "@types/*": [
        "../../packages/types/*"
      ]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
