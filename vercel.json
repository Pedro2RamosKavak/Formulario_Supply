{
  "functions": {
    "apps/*/app/api/**/*.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/api/cloudinary-signature",
      "methods": ["POST", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization"
      },
      "continue": true
    },
    {
      "src": "/api/upload",
      "methods": ["POST", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization"
      },
      "continue": true
    }
  ],
  "buildCommand": "mkdir -p packages/types/dist && touch packages/types/dist/index.js packages/types/dist/index.d.ts && cd apps/form-app && NEXT_TYPESCRIPT_IGNORE_BUILD_ERRORS=true npm run build",
  "installCommand": "echo '{\"name\":\"@types/shared\",\"version\":\"0.0.0\",\"private\":true}' > packages/types/package.json && npm install"
} 